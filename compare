## Path Resolution
rootpath() {
    local source="${BASH_SOURCE[0]:-$0}"
    if [[ -L "$source" ]]; then
        dirname "$(readlink "$source")"
    else
        dirname "$source"
    fi
}

## Feature Map and Menu
MAP="${XDG_DATA_HOME:-$HOME/.local/share}/twin/feature-map.txt"
OPTIONS=()

while IFS='|' read -r label cmd; do
    OPTIONS+=("$label" "$cmd")
done < "$MAP"

## Menu Dialog
CHOICE=$(whiptail --title "TWIN COMMAND SELECTOR" \
                  --menu "Choose a task for your digital twin:" 20 78 10 \
                  "${OPTIONS[@]}" \
                  3>&1 1>&2 2>&3)

## Action Dispatch
if [[ -n "$CHOICE" ]]; then
    "$(rootpath)/twin.sh" "$CHOICE"
else
    echo "‚ö†Ô∏è No selection made."
fi
